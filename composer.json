{
    "name": "pickling/pickling",
    "description": "Build HTML pages based from gherkin files",

    "type": "library",
    "license": "MIT",

    "keywords": [
        "behat",
        "html",
        "docs"
    ],

    "authors": [
        {
            "name": "Felipe Martins",
            "email": "me@fefas.net"
        }
    ],

    "scripts": {
        "tests": "phpunit -c phpunit.xml --testdox --colors=always"
    },

    "autoload": {
        "psr-4": {
            "Pickling\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Pickling\\": "tests/"
        },
        "files": [
            "tests/constants.php"
        ]
    },

    "require": {
        "twig/twig": "^2.4",
        "behat/gherkin": "^4.5"
    },

    "require-dev": {
        "phpunit/phpunit": "^7.2"
    }
}
